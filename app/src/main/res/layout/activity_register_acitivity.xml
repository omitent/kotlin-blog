<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterAcitivity">

    <!--ISI DI DALAM SINI-->
    <LinearLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bggradient"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/imageLogo"
                android:src="@drawable/logo"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#6dffbf"
                android:layout_gravity="center"
                android:text="Corea System Indonesia"/>

        <EditText
                android:id="@+id/editNewName"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textColorHint="#80FFFFFF"
                android:inputType="textCapWords"
                android:textColor="#80FFFFFF"/>
        <EditText
                android:id="@+id/editNewEmail"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#80FFFFFF"
                android:inputType="textEmailAddress"
                android:textColor="#80FFFFFF"/>
        <EditText
                android:id="@+id/editNewPassword"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="#80FFFFFF"
                android:inputType="textPassword"

                android:textColor="#80FFFFFF"/>
        <EditText
                android:id="@+id/editNewCPassword"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColorHint="#80FFFFFF"
                android:inputType="textPassword"

                android:textColor="#80FFFFFF"/>
        <Button
                android:id="@+id/buttonRegister"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="30dp"
                android:text="Register"
                android:textColor="@color/colorPrimaryDark"/>
        <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You Have an Account? \n Click To Login"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:lineSpacingExtra="10dp"
                android:textStyle="bold"/>

    </LinearLayout>


</ScrollView>